{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Enemy Stats",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": ["Name", "MaxHP", "Attack", "Defense", "XPValue"],
    "properties": {
      "Name":     { "type": "string", "minLength": 1 },
      "MaxHP":    { "type": "integer", "minimum": 1 },
      "Attack":   { "type": "integer", "minimum": 0 },
      "Defense":  { "type": "integer", "minimum": 0 },
      "XPValue":  { "type": "integer", "minimum": 0 },
      "MinGold":  { "type": "integer", "minimum": 0 },
      "MaxGold":  { "type": "integer", "minimum": 0 },
      "AsciiArt": { "type": "array", "items": { "type": "string" } }
    }
  }
}
